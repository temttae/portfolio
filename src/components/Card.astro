---
import "../styles/card.scss";

interface Props {
  title: string;
  description: string;
  image_src?: string;
}
const { title, description, image_src } = Astro.props;
---

<div class="card-container">
  <img src={image_src} />
  <div class="title-desc">
    <span class="card-title">{title}</span>
    <span>{description}</span>
  </div>
</div>
